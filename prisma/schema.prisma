// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tag {
  id Int @id @default(autoincrement())
  name String
  bg_color String
  text_color String
  gifts Gift[]
}

model Gift {
  id Int @id @default(autoincrement())
  name String
  description String
  system String
  tags Tag[]
}